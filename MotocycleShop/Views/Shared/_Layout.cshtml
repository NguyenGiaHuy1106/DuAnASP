<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="text-center">

            <img src="https://cdn.honda.com.vn/motorbikes/August2020/T0IMBNB1kz8bv6GHlfLX.png" width="100%" height="350" />

        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #26272b ">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="TrangChu"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <div class="box">
                        <link rel="stylesheet" href="~/css/Search.css" />
                        <div class="container-4">
                            <input type="search" id="search" placeholder="Search..." />
                            <button class="icon"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " style="color:#ffffff" asp-area="" asp-controller="Home" asp-action="TrangChu">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style="color:#ffffff" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style="color:#ffffff" asp-area="" asp-controller="Home" asp-action="DangKy">Đăng ký</a>
                        </li>
                        <li>
                            <a class="nav-link " style="color:#ffffff" asp-area="" asp-controller="Khoes" asp-action="User">Kho </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--Important link from source https://bootsnipp.com/snippets/rlXdE-->

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
